.head{
    position: fixed;
    left: 0;
    top: 0;
    height:3em;
    width: 100%;
    background-color: #5fc0cd;
}
a{
    line-height: 3em;
    color: white;
    text-decoration: none;
 }
.head-back{
    text-align: center;
    flex: none;
    width: 2em;
    height: 3em;
    float: left;
}
.head-title{
    flex: 1;
    height: 3em;
    text-align: center;
    color: white;
}
h4{
    line-height: 2em;
    margin: 0.5em 2em 0.5em 0;
}

main{
    width: 100%;
    height: auto;
    position: absolute;
    top: 3em;
    left: 0;
    bottom: 3.7em;
    overflow-x: hidden;
    overflow-y: auto;
}
.content{
    width: 100%;
    height: auto;
}
.content-intro{
    display: flex;
    height: 10em;
    width: 100%;
    background-image: url("p2.png");
    background-size: cover;
}
.content-intro-icon{
    flex: none;
    display: table-cell;
    vertical-align: middle;
    height: 10em;
    width: 7em;
}
.content-intro-info {
    margin:3.5em 0 2.5em 0;
    flex: 1;
    height: auto;
}
.content-intro-icon-img{
    padding: 2.5em 1em;
    max-width: 5em;
    max-height: 5em;
}
.content-intro-info-p1{
    margin: 0 0 0.3em 0;
}
#int-p1{
    color: #ffffff;
    margin: 0 0 0.5em 0;
}
#int-p2{
    color: #ffffff;
    margin: 0 0 0.5em 0;
    font-size: 0.8em;
}
.content-intro-info-p2{
    padding: 0 0 0 1.2em;
    background-image: url("p4.png");
    background-repeat: no-repeat;
    background-size: 0.8em 1.1em;
}
.content-des{
    width:100%;
}
.content-des-skill{
    height: 3em;
    line-height: 3em;
    padding: 0 0.5em;
    border-bottom:1px solid #ccc;
}
#des-p1{
    font-size: 0.8em;
    padding: 0 0.5em;
    line-height: 3em;
    border-left: 3px solid #5fc0cd;
}
ul{
    margin:0;
    padding:0 0.5em;
}
li{
    align-items: center;
    display: flex;
    padding: 1.2em 0;
    height: auto;
    font-size:0.8em;
    border-bottom:1px solid #ccc;
    list-style-type: none;
}
.li-icon{
    /*height: 1em;*/
    line-height: 1em;
    margin:0 1em 0 1em;
    background-image: url("p5.png");
    background-repeat: no-repeat;
    background-size: 1em;
    padding:0 0 0 1em;
}
.li-tag{
    height: 1em;
    line-height: 1em;
    flex: none;
    padding:0 1em;
    float: left;
    color: #aaa;
    border-right:1px solid #ccc;
}
.li-item{
    /*line-height: 1em;*/
    padding: 0 0 0 1em;
    flex: 1;
}
.li-item-rmb{
    color: #ff0000;
}


footer{
    font-size: 2em;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
}
.foot{
    height: 2em;
    margin: 0 0 -0.2em 0;
}
.foot-msg{
    width: 45%;
    margin: 0 2% 0 3%;
    float: left;
}
.foot-tel{
    width: 45%;
    margin: 0 3% 0 2%;
    float: left;
}
button{
    cursor: pointer;
    box-shadow: 0 0 0 2px #5fc0cd;
    border: none;
    border-radius: 0.2em;
    outline: none;
    height: 2.5em;
    font-size: 0.5em;
    background: none;
    width: 100%;
}
.btn-msg{
    background-color: white;
    color: #5fc0cd;
}
.btn-tel {
    background-color: #5fc0cd;
    color: white;
}