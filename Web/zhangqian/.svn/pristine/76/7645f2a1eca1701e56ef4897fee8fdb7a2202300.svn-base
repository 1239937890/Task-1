body {
  margin: 0; }

header {
  height: 3rem;
  background-color: #5fc0cd;
  display: flex;
  align-items: center; }
  header navbar {
    display: flex;
    align-items: center;
    width: 100%; }
    header navbar img {
      max-height: 1rem;
      width: 10px;
      margin: 0 10px; }
    header navbar p {
      flex: 1;
      display: flex;
      color: #fff;
      justify-content: center;
      margin-right: 30px; }

.card {
  height: 10rem;
  width: 100%;
  background-image: url(../img/p2.png);
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  align-items: center; }
  .card .card-icon img {
    max-height: 5rem;
    margin: 0 1rem; }
  .card .card-word {
    flex: 1; }
    .card .card-word p {
      color: #fff;
      margin: 0; }
    .card .card-word .card-word-img {
      display: flex; }
      .card .card-word .card-word-img img {
        margin: 0; }

.content .content-skill {
  border-bottom: 1px solid #ccc; }
  .content .content-skill p {
    font-size: .8rem;
    margin-left: 1rem;
    padding-left: 1rem;
    border-left: 3px solid #5fc0cd; }
.content ul {
  margin: 0;
  padding-left: 1.5rem; }
  .content ul li {
    font-size: .8rem;
    padding: 1rem 0;
    display: flex;
    list-style: none;
    align-items: center;
    border-bottom: 1px solid #ccc; }
    .content ul li .tag {
      color: #aaa;
      height: 1rem;
      padding-right: .5rem;
      padding-left: .5rem;
      border-right: 1px solid #ccc; }
    .content ul li .item {
      padding-left: .5rem;
      flex: 1; }
    .content ul li .item-red {
      color: #ff0000; }
    .content ul li p {
      margin: 0; }
    .content ul li .star {
      padding-left: .5rem;
      padding-right: .5rem;
      display: flex;
      align-items: center; }
      .content ul li .star img {
        max-height: 1rem; }
    .content ul li .star-left {
      border-right: 1px solid #ccc; }

.footer {
  width: 100%;
  position: fixed;
  bottom: .5rem;
  left: 0;
  display: flex; }
  .footer div {
    flex: 1; }
    .footer div .btn {
      height: 2.5rem;
      width: 90%;
      margin: 0 5%;
      border: none;
      border-radius: .3rem;
      outline: none;
      cursor: pointer; }
    .footer div .btn-left {
      background-color: #fff;
      color: #5fc0cd;
      border: 1.5px solid #5fc0cd; }
    .footer div .btn-right {
      background-color: #5fc0cd;
      color: #fff;
      border: 1.5px solid #5fc0cd; }
