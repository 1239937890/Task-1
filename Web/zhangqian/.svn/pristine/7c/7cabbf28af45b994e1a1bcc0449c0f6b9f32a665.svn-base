body {
    padding: 0;

}
.header {
    height: 3em;
    margin: 0;
    padding: 0;
}
.navbar {
    border: none;
}
.head {
    height: 3em;
    min-height: 0;
    margin: 0;
    background-color: #29bde0;
    float: left;
}
.head-ul {
    width: 100%;
    padding: 0;
    display: flex;
    float: left;
    list-style-type: none;
}
li {
    flex: 1;
    float: left;
}
.head-ul li img {
    transform: scale(0.5);
}
.head-left-img {
    float: left;
}
.head-middle {
    font-size: 1.2em;
    height: 1.5em;
    margin: .5em 0;
    text-align: center;
    color: #ffffff;
}
.head-right-img {
    float: right;
}
.head-player {
    position: fixed;
    top: 3.25em;
    right: 1em;
    z-index: 999;
}
.head-player>img {
    height: 1.5em;
    width: 1.5em;
}
.main {
    width: 100%;
    height: auto;
    position: absolute;
    top: 3em;
    bottom: 4em;
    left: 0;
    background-color: #29bde0;
    overflow-x: hidden;
    overflow-y: auto;
}
.main-vote {
    width: 100%;
    height: 2em;
    background-color: #b9e9f5;
}
.main-vote>p {
    margin: 0 0 0 2em;
    line-height: 2em;
}
.main-body {
    /*width: 100%;*/
    height: auto;
    margin: .5em 0 0 1.5em;
    color: #ffffff;
}
.main-body p {
    margin: 0;
}
.main-body span {
    height: 0;
    width: 0;
    position: absolute;
}
.big-triangle {
    top: 2em;
    left: 1.5em;
    z-index: 999;
    border-width: .5em;
    border-style: solid dashed dashed;
    border-color: #b9e9f5 transparent transparent transparent;
}
.main img{
    width: 150px;
}
.col-xs-4 {
    height: 8em;
}
.thumbnail {
    height: 5.5em;
    width: 5.5em;
    margin-bottom: 0;
    padding: .1em;
    border: none;
    border-radius: 0;
    display: block;
    overflow: hidden;
    position: absolute;
}
.signs {
    margin: 6em 0 0 0;
    position: absolute;
    display: none;
}
.thumbnail:hover + .signs {
    display: block;
}
.content-status {
    height: 3.5em;
    line-height: 3.5em;
    background-color: #f5c97b;
}
.content-status>p {
    margin: 0;
    font-size: 1.5em;
}
.content-num {
    height: 1.8em;
    line-height: 1.8em;
    color: #ffffff;
    background-color: #83b09a;
}
.main div.col-xs-4{
    text-align: center;
}
.text-muted {
    margin: .5em 0;
    display: flex;
}
.text-muted>img {
    height: 1.1em;
    width: 1.1em;
    margin: .1em;
    flex: 1;
    background-color: #ffffff;
}
.foot {
    height: 4em;
    positition: fixed;
    background-color: #29bde0;
}
.foot>button {
    height: 3em;
    width: 80%;
    margin: .5em 10%;
    color: #ffffff;
    border: none;
    border-radius: 0;
    background-color: #fbb435;
}
.foot p {
    margin:-.5em 0;
    font-size: 2em;
}
