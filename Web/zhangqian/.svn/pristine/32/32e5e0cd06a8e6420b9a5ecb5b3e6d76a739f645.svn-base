header .head {
    height: 3em;
    width: 100%;
    min-height: 0;
    background-color: #69d1e9;
    margin: 0;
}
header .head img {
    margin: .5em;
    height: 1.5em;
    width: 1.5em;
}
main {
    width: 100%;
    height: auto;
    position: absolute;
    top: 3em;
    left: 0;
    bottom: 0;
    background: #f0f0f0;
}
.history {
    width: 90vw;
    height: 4em;
    margin: 1em 5vw 0;
    border: .5px solid #cbcbcb;
    background-color: #fff;
    text-align: center;
}
.history p {
    line-height: 2.5em;
    margin: 0 0 0 1em;
    display: inline-block;
    font-size: 1.5em;
    color: #9a9a9a;
}
.history img {
    height: 1.5em;
    width: 1em;
    float: right;
    margin: 1.2em .5em 0 0;
    /*transform: scale(0.8);*/
}
.main {
    width: 90vw;
    height: auto;
    margin: 1em 5vw;
    border: .5px solid #cbcbcb;
    background-color: #fff;
}
.main-body {
    height: auto;
    text-align: center;
}
.main-title {
    color: #fbb435;
    font-size: 1.5em;
    border-bottom: 1px solid #fbb435;
    margin: 0 0 .5em 0;
}
.main-title p {
    margin: .5em 0;
}
.main-version {
    width: 70vw;
    height: 4em;
    background-color: #69d1e9;
    margin: 0 0 .5em;
    display: inline-block;
}
.main-version p {
    text-decoration: none;
    line-height: 3em;
    margin: 0;
    color: #fff;
    font-size: 1.5em;
}
.main-body a:hover,a:visited {
    text-decoration: none;
    color: #fff;
}
.main-point {
    text-align: center;
}
.main-point ul {
    height: 2em;
    /*width: 100%;*/
    padding: 0;
    margin: -.5em 0 0;
    display: inline-block;
}
.main-point ul li {
    width: 15px;
    height: 15px;
    float: left;
    list-style: none;
    border-radius: 100%;
    background-color: #f0f0f0;
    margin: .2em;
}
.main-point ul li:hover {
    background-color: #69d1e9;
}
#next {
    transform: scale(0.6);
    margin: -.2em 6vw 0 0;
    position: fixed;
    right: 0;
}