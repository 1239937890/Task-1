body{
    background-color: #68cdd5;
    padding:3rem 15% 0.25rem 15%;
    font-size: 20px;
}
img{
    max-width: 100%;
    display: block;
}
.back{
    position: absolute;
    left: 0.5rem;
    top: 0.5rem;
}
h2{
    transform:scale(0.5);
}
p{
    text-align: left;
    color: white;
}
.footer{
    padding: 1em 0 0 0;
}
.leftfooter{
    float: left;
    width: 50%;
}
.rightfooter{
    float: right;
    width: 50%;
}
.leftfootercoin{
    margin: 0 0 0 -5%;
    transform:scale(0.6);
}
.rightfootercoin{
    float:right;
    margin: 0 -5% 0 100%;
    transform:scale(0.6);
}
.leftnumber{
    margin: -3% 0 0 -8%;
}
.rightword{
    margin:0 -5% 0 0;
    float: right;
}