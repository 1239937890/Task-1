header {
  display:flex;
  justify-content: space-between;
}

main {
  top: 4.25rem;
  bottom: 0;
  padding: 0 5vw;
  text-align: center;
  padding-bottom: 5vw;
  background-color: #f0f0f0;
  .next {
    position: absolute;
    top: 83.5vw;
    right: 6.5vw;
    border-top: 1.7rem solid transparent;
    border-left: 1.7rem solid red;
    border-bottom: 1.7rem solid transparent;
  }
  .button {
    display: block;
    padding: 6vw 0;
    margin: 4vw 0;
    font-size: 4vw;
    line-height: 4vw;
    cursor: pointer;
    border: 1px solid #c9c9c9;
    border-radius: 3px;
    white-space: nowrap;
    color: #999;
    background-color: #fafafa;
    .btn-back {
      float: right;
      display: inline-block;
      margin-right: 2.19vw;
    }
  }
  .list {
    background-color: #fff;
    border: 1px solid #c9c9c9;
    ul {
      padding: 0;
      p {
        border-bottom: 1px solid #fdd793;
        font-size: 5.5vw;
        color: #fbb435;
        padding: 4.375vw 0;
      }
      li {
        list-style: none;
        span {
          font-size: 5vw;
          color: #fff;
          line-height: 15vw;
        }
      }
      .btn {
        background-color: #69d1e9;
        color: #fff;
        margin: 4.5vw 10vw;
        font-size: 4vw;
        border: 1px solid #a7e4f2;
      }
      .mag {
        font-size: 3.6vw;
        color: #787878;
      }
    }
  }
}
.tab span {
  display: inline-block;
  width: 1rem;
  height: 1rem;
  margin-left: .5rem;
  border-radius: 50%;
  background-color: #f0f0f0;
}
.tab span:first-child {
  background-color: #29bde0;
  margin:0;
}
.button:hover {
  background-color: #eee;
  color: #999;
}

.button:focus {
  background: darkblue;
  color:#fff;
  position: relative;
  top: 1px;
  text-shadow: none;
  box-shadow: 0 1px 1px rgba(0, 0, 0, .3) inset;
}
