footer {
  background-color: #29b078;
  color: #fff;
}
footer .footbox {
  padding: 20px -15px;
}
footer .footbox p {
  font-size: 1.5rem;
}
footer .footbox a {
  font-size: 1.4rem;
  display: inline-block;
  color: #fff;
}
footer .copyright {
  text-align: center;
  border-top: 1px solid #32c086;
  font-size: 1.4rem;
  line-height: 30px;
}
@media (min-width: 768px) {
  .footbox {
    padding: 20px 0;
  }
}
