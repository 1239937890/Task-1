header {
  padding: 1rem;
  background-color: #5FC0CD;
}
header a {
  float: left;
  color: white;
  text-decoration: none;
}
header h2 {
  margin: 0 4rem;
  text-align: center;
}
main {
  top: 5rem;
}
main .content {
  height: 16rem;
  color: #fff;
  background: url(../images/background.png) no-repeat center;
  background-size: cover;
}
main .content .profile {
  position: relative;
  top: 20%;
  left: 2rem;
  width: 8.5rem;
  height: 8.5rem;
  border-radius: 50%;
  background-color: #fff;
  overflow: hidden;
}
main .content .profile img {
  width: 100%;
}
main .content .information {
  position: relative;
  top: -30%;
  margin-left: 12rem;
  color: #000;
}
main .content .information .pos {
  background-size: 1.2rem;
}
main .box {
  color: #000;
}
main .box .title {
  padding-left: 2rem;
  line-height: 4rem;
  border-bottom: 1px solid #ccc;
}
main .box .title span {
  padding-left: 1rem;
  border-left: 3px solid #5FC0CD;
}
main .box .list {
  line-height: 4rem;
}
main .box .list div {
  margin-left: 1rem;
  padding-left: 1rem;
  border-bottom: 1px solid #ccc;
}
main .box .list div img {
  width: 1.5rem;
}
main .box .list div .list-tag {
  padding: 0 1rem 0 1rem;
}
main .box .list div .list-st {
  padding-right: 1rem;
  border-right: 1px solid #ccc;
  color: #aaa;
}
main .box .list div .list-nd {
  margin-left: 1rem;
}
main .box .list div .list-th {
  margin-left: 7.7rem;
}
main .box .list div .list-ps {
  float: left;
  color: #aaa;
  margin: 0;
  padding-right: 1rem;
  border-right: 1px solid #ccc;
}
main .box .list div .red {
  color: red;
}
footer button {
  height: 4rem;
  width: 50%;
}
footer .footer-left,
footer .footer-right {
  border: none;
  outline: none;
  color: #fff;
  margin: 0.5rem;
  border-radius: 6px;
  background: #5fc0cd;
  font-size: 1.6rem;
}
footer .footer-left {
  background: #fff;
  color: #5fc0cd;
  border: solid;
}
