.pull-left {
  float: left;
}
.pull-right {
  float: right;
}
html {
  font-size: 62.5%;
}
body {
  margin: 0;
  padding: 0;
}
header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 1rem;
  line-height: 4rem;
  color: #fff;
  background-color: #5fc0cd;
}
header a {
  color: #fff;
  font-size: 1.4rem;
  text-decoration: none;
}
header h2 {
  margin: 0 2rem;
  text-align: center;
  font-size: 1.8rem;
}
main {
  position: absolute;
  top: 6rem;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eff0f4;
  overflow-x: hidden;
}
main .account,
main .password {
  position: relative;
  width: 100%;
  line-height: 5rem;
  margin: 0.5rem 0 0 0;
  background-color: #fff;
}
main .account img,
main .password img {
  position: absolute;
  top: 1.3rem;
  height: 2.5rem;
  margin: 0 1.5rem;
}
main .account input,
main .password input {
  border: none;
  width: 100%;
  margin-left: 5rem;
  padding-left: 3rem;
  border-left: solid #fff;
  vertical-align: middle;
  outline: none;
}
main .login {
  margin: 0.5rem 0 0 0;
  padding: 1rem;
  width: 100%;
  font-size: 1.6rem;
  border: none;
  color: #eff0f4;
  background-color: #5fc0cd;
}
main .forgot-password {
  float: right;
  padding: 0 1rem;
}
