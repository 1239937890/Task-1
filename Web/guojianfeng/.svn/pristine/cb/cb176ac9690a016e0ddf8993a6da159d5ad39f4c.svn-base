@font-size:1.5rem;
body {
  background-color: #29bde0;
}
.wrap {
  font-size:@font-size+.1;
  background-color: #b9e9f5;
  position: fixed;
  top: 4.6rem;
  width:100%;
  z-index: 90;
  .text {
    font-size: 3vw;
    line-height: 10vw;
    margin-left:4vw;
  }
  .main-flot {
    background-color: rgba(41, 189, 224, 0.7);
    position:fixed;
    width: inherit;
    .triangle-down {
      position: absolute;
      top: 0;
      left: 4vw;
      width: 0;
      height: 0;
      z-index: 999;
      border-top:1.7vw solid  #b9e9f5;
      border-left:1.7vw solid transparent;
      border-right:1.7vw solid transparent;
    }
    .note {
      height: 5vw;
      margin: 1.5vw 10.9vw;
      font-size: 3.43vw;
    }
  }
}
#audio {
  position: absolute;
  top: 6vw;
  left: 83vw;
  transform: translateY(-50%);
  opacity: 0;
}
#circle {
  background-color: #fbb435;
  border-radius:50%;
  width: 8vw;
  height: 8vw;
  float: right;
  margin: 1vw 5vw 1vw 0;
  border: none;
  outline: none;
}
#triangle-right {
  width: 0;
  height: 0;
  border-top:3vw solid transparent;
  border-left:6vw solid white;
  border-bottom:3vw solid transparent;
  position: absolute;
  top:2vw;
  right: 5vw;
}
main {
  position: absolute;
  top:9rem;
  bottom: 10%;
  z-index: 50;
  background-color: #29bde0;
}
.flex {
  padding: 0;
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
  list-style: none;
  img {
    width: 100%;
    position: absolute;
    left: 0;
    opacity: 1;
  }
}
.item {
  position: relative;
  width: 20%;
  margin: 8% 4.5% 8% 7.5%;
  text-align: center;
  border: .5vw solid #fff;
}
.play {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding:20% 0;
  font-size: 80%;
  border-bottom: .5vw solid white;
  background-color: #f5c97b;
}
.number {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding:5% 0;
  color: #fff;
  font-size: 80%;
  background-color: #83b09a;
}
.content {
  position: absolute;
  left: 0;
  right: 0;
  display: none;
  margin-top:3.5vw;
  width: 2rem;
  height: 2rem;
  background: url(../images/kill.png) no-repeat;
  background-size: 90%;
}
footer {
  z-index: 80;
}
.btn {
  text-align: center;
  text-decoration: none;
  color: #fff;
  margin: 4.8vw;
  padding:1vw 0;
  display: flex;
  background-color: #fbb435;
  justify-content: center;
  align-items: center;
}

@media (min-width: 768px) {
    .wrap .text {
      font-size: 2.5rem;
      line-height: 5rem;
      margin-left: 4rem;
    }
    #circle {
      width: 4rem;
      height: 4rem;
      margin: .5rem 3rem .5rem 0;;
    }
    #triangle-right {
      border-top: 1.5rem solid transparent;
      border-left: 3rem solid white;
      border-bottom: 1.5rem solid transparent;
      top: 1rem;
      right: 3rem;
    }
    .wrap .main-flot .triangle-down {
      left: 3rem;
      border-top: 1rem solid #b9e9f5;
      border-left: 1rem solid transparent;
      border-right: 1rem solid transparent;
    }
    .wrap .main-flot .note {
      height: 2rem;
      margin: 1rem 5rem;
      font-size: 2.5rem;
    }
