.fixed {
  position:fixed;
  //line-height:4rem;
  font-size:2rem;
  right:0;
  left:0;
}
.pull-left {
  float: left;
}
.pull-right {
  float:right;
}
a {
  text-decoration: none;
}
@color:#fff;
@background-color:#29bde0;

html {
  font-size: 62.5%;
}
body {
  padding:0;
  margin: 0;
}
header {
  .fixed;
  top:0;
  padding:1rem;
  color: @color;
  background-color: @background-color;
  img {
    height: 1.8rem;
  }
}
main {
  .fixed;
  overflow-y: auto;
}
footer {
  .fixed;
  bottom:0;
  color: @color;
  background-color: @background-color;

}