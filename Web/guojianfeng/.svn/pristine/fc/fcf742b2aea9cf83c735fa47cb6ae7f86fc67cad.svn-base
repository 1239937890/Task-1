main {
  top: 4.2rem;
  bottom:8%;
  padding: 0;
  background-color: #29bde0;
}

.victory {
  position: relative;
  text-align: center;
  img {
    width: 65%;
    height: 65%;
  }
  .winner {
    position: absolute;
    top: 78%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    font-size: 7vw;
    color: white;
  }
}

.good {
  color: #ffc865;
  font-size: 4.5vw;
  padding: 0 10%;
  text-align: justify;
}

.game-data {
  text-indent: 10%;
  div {
    margin: 0 0 5px;
    font-size: 4.5vw;
    color: #fff;
  }
  .role {
    margin-right: 24px;
  }
}

.list {
  padding: 2% 0 5% 10%;
  border-bottom: 1px solid #a6a6a6;
  font-size: 4.5vw;
  color: #a6a6a6;
  background: #fff;
  p {
    margin-bottom: 10px;
  }
  .data {
    margin-right: 55%;
    color: #000;
  }
  .letter {
    margin-bottom: 4px;
  }
}

footer {
  display: flex;
  background-color: rgba(153, 223, 240, 0.7);
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
    border-radius: 10px;
    font-size: 80%;
    color: #fff;
    margin: 2% 4%;
    padding: 3% 0;
    text-decoration: none;
  }
  .moreGame {
    background-color: #f66f6f;
  }
  .share {
    background-color: #fbb435;
  }
}

@media (min-width: 768px) {
  .victory {
    .winner {
      font-size: 5.5rem;
    }
  }
  .good, .game-data div {
    font-size: 3.5rem;
  }
  .list {
    font-size:3.5rem;
  }

}

