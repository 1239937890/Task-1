/****  主框架   ****/
#banner {
  width: 100vw;
  height: 31.25vw;
  box-shadow: 1px 1px 10px #aaa;
  position: relative;
}
#banner ul {
  width: 100vw;
  height: 31.25vw;
  position: relative;
  overflow: hidden;
}
#banner ul li {
  list-style: none;
  position: absolute;
  top: 0;
  left: 0;
}
#banner ul li img {
  width: 100%;
  height: 100%;
}
/****  动画绑定   ****/
#first {
  width: 100%;
  height: 100%;
  -webkit-animation: pic_1 24s infinite;
  -moz-animation: pic_1 24s infinite;
}
#second {
  width: 100%;
  height: 100%;
  -webkit-animation: pic_2 24s infinite;
  -moz-animation: pic_2 24s infinite;
}
#third {
  width: 100%;
  height: 100%;
  -webkit-animation: pic_3 24s infinite;
  -moz-animation: pic_3 24s infinite;
}
#fourth {
  width: 100%;
  height: 100%;
  -webkit-animation: pic_4 24s infinite;
  -moz-animation: pic_4 24s infinite;
}
