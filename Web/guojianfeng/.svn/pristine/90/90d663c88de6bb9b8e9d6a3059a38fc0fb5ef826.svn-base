main {
    padding-bottom:50px;
}
.hor-nav {
    font-size: 14px;
    border-top: 1px solid #d0d6d9;
    border-bottom: 1px solid #edf1f2;
}
.hor-nav ul {
    padding: 0;
}
.hor-nav li {
    margin: 15px;
    list-style: none;
    display: inline-block;
}
.hor-nav li a {
    color: black;
}
h3{
    text-align: left;
    border-bottom: 1px solid #d0d6d9;
    line-height: 70px;
}

.mid {
    border:1px solid #edf1f2;
    line-height: 40px;
    padding: 0;
}
.mid p {
    color: #999;
    margin-left: 5px;
    font-size: 12px;
    display: inline-block;
}
.time {
    margin-left: 20px;
}
.money {
    float: right;
    margin-right: 10px;
}
.bot {
    border: 1px solid #edf1f2;
    float: left;
    line-height: 40px;
    padding: 0;
}
.xin {
    color: #999;
    text-align: center;
    margin-top: 36px;
}
.bor {
    border-bottom: 1px solid #edf1f2;
    border-left: 1px solid #edf1f2;
}
.nesing {
    padding: 5px 0 4px 0;
}
.col-xs-5 {
    padding-bottom: 10px;
}
.can {
    padding:0;
    margin-top: 40px;
    box-shadow: 2px 3px 10px #e2e2e2;
}

.ios {
    position: absolute;
    left: 0;
    right:0;
    top: 0;
    bottom:0;
    opacity: 0;
    border-radius: 5px;
    color: white;
    background-color: rgba(0, 0, 0, 0.7);
    transition: opacity 1s;
}
.iostitle {
    margin-top: 80px;
    text-align: center;
}
.iostext {
    margin: 30px 40px;
    text-align: justify;
}
div .can:hover .ios {
    opacity: 1;
    box-shadow: 10px 10px 20px #000;
}
@media (max-width: 400px) {
    .col-xs-5 img {
        width: 100%;
    }
}
