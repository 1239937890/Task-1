body {
    margin: 0;
    width: 100%;
    font-size: 62.5%;

}

.b {
    padding: 2% 0 0 6%;
}

.box {
    float: left;
    width: 31%;
    margin: 0 1.2% 2.3% 1.1%;
    padding: 31% 0 0 0;
    background: #fea500;
    border-radius: 10px;
}

button {
    width: 100%;
    padding: 5%;
    margin: 3% 0;
    font-size: 18px;
    border-radius: 15px;
    text-align: center;
    color: orange;
    background-color: #fff;
    border: 5px solid orange;
    outline: none;
}

button:hover {
    background: #ffa500;
    color: #ffffff;
}

