.fixed {
  position: fixed;
  line-height: 3rem;
  font-size: 1.5rem;
  right: 0;
  left: 0;
}
html {
  font-size: 62.5%;
}
body {
  padding: 0;
  margin: 0;
}
header {
  position: fixed;
  line-height: 3rem;
  font-size: 1.5rem;
  right: 0;
  left: 0;
  color: #fff;
  top: 0;
}
main {
  position: fixed;
  line-height: 3rem;
  font-size: 1.5rem;
  right: 0;
  left: 0;
  bottom: 5rem;
  padding: 0;
  background-color: #fff;
  overflow-y: auto;
}
footer {
  position: fixed;
  line-height: 3rem;
  font-size: 1.5rem;
  right: 0;
  left: 0;
  color: #fff;
  bottom: 0;
  display: flex;
  width: 100%;
  background-color: #f8fafb;
  border-top: 1px solid #ccc;
}
