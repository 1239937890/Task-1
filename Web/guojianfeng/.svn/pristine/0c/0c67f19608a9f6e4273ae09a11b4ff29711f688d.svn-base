.fixed {
  position: fixed;
  line-height: 3rem;
  font-size: 1.5rem;
  right:0;
  left:0;
}
@color: #fff;
@padding:1rem;

html {
font-size: 62.5%;
}
body{
  padding:0;
  margin:0;
}
header {
  .fixed;
  color: @color;
  top:0;
}
main {
  .fixed;
  bottom:5rem;
  padding:0;
  background-color: #fff;
  overflow-y: auto;
}
footer {
  .fixed;
  color:@color;
  bottom:0;
  display:flex;
  width: 100%;
  background-color: #f8fafb;
  border-top: 1px solid #ccc;
}

