header {
  z-index: 10;
}
main {
  padding: 0 13%;
  background-color: #29bde0;
}
main .sid {
  position: absolute;
  top: 5.5%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 12%;
  height: 12vw;
  z-index: 5;
  border: 2px solid;
  border-radius: 50%;
  color: #fff000;
  background-color: #fff;
}
main .sid span {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 20;
  color: #29bde0;
  font-size: 7vw;
}
main .show {
  position: relative;
  margin-top: 15%;
  padding: 10% 20% 60% 20%;
  background-color: #ffe5b6;
}
main .show img {
  width: 100%;
  margin: 15% auto 0;
}
main .show .pic {
  position: relative;
}
main .show .pic .text {
  position: absolute;
  left: 0;
  text-align: center;
}
main .show .pic .text p {
  font-size: 6vw;
  font-weight: 600;
  margin: 5% 0;
}
main .show .pic .text .p1 {
  color: #29bde0;
}
main .show .pic .text .p2 {
  color: #ff0000;
}
main .show .pic .text .p3 {
  font-size: 5vw;
  color: #ee9f1b;
  border-top: 2px solid #fff;
}
main .btn {
  background-color: #ee9f1b;
  padding: 5%;
  margin: 5% 0;
  color: #fff;
  text-align: center;
  font-size: 2rem;
}
@media (min-width: 768px) {
  main {
    padding: 0 100px;
  }
  main .sid {
    width: 5rem;
    height: 5rem;
  }
  main .sid span {
    font-size: 3rem;
  }
  main .show {
    margin-top: 10%;
    padding: 10% 20% 45% 20%;
  }
  main .show .pic .text p {
    font-size: 3rem;
  }
  main .show .pic .text .p3 {
    font-size: 2.8rem;
  }
}
